@model Company
@{
    Layout = null;
}


<div class="container-fluid row  mb-5 justify-content-around" style="margin-top:100px">

    <div class="col-xl-5 col-lg-5 col-md-12 col-sm-12" style="height:500px;">
        <iframe style="width:100%;height:90%" src="@Model.Video"></iframe>
        @if ((User.Identity.Name == Model.OwnerName) || User.IsInRole("admin"))
        {
            <form method="post" class="form-horizontal" asp-controller="Company" asp-action="ChangeLinkYoutube" enctype="multipart/form-data">
                <input type="hidden" name="YoutubeLink" value="" />
                <div class="row">
                    <div class="col-6">
                        <input type="hidden" name="idCompany" value=@Model.Id />
                        <input type="hidden" id="Link" name="linkYoutube" value="" />
                        <input type="hidden" class="myButton" id="Add" value="Change" />

                    </div>
                    <div class="col-6">
                        <input type="hidden" class="myButton" id="Cancel" onclick="CloseShow()" value="Cancel" />
                    </div>
                </div>

            </form>
            <input type="button" id="Show" class="myButton" onclick="Show()" value="Edit Link Video">
        }

    </div>
    <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
        <div class="h1" style="color:#4C2C12">
            About the project <u>"@Model.Name"</u>
        </div>
        <em class="m-auto rounded-circle">   @Model.About </em>
    </div>

</div>

<div class="container-fluid mb-5">
    <div class="row">
        <div class="col-6">

            <h3>Owner : <a href="/Account?user=@Model.OwnerName">@Model.OwnerName</a></h3>
        </div>
            <div class="col-6" style="text-align:end">
                <p ><h3>Date of creation:</h3>@Model.DateCreate.ToShortDateString()</p>
            </div>

    </div>
</div>
