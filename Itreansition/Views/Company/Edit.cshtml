@model Itreansition.ViewModels.EditCompanyViewModel

    <div class="container-fluid m-auto" style="max-width:60%">
        <form class="form-horizontal" asp-controller="Company" asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />
            <input type="hidden" asp-for="OwnerName" value="@Model.OwnerName" />
            <div class="row justify-content-center mt-5 mb-3">
                <div class="col-6">
                    <div class="row company-block-1 img-company" id="EditImg" style="background-image:url(@Model.Logo);;width:105%">
                        <input type='file' id="StreamImg" style="width:100%" />
                    </div>
                </div>
                <div class="col-6">
                    <iframe id="EditVideo" style="width:100%;height:100%" src="@Model.Video"></iframe>
                    <input type='text' id="StreamVideo" asp-for="Video" onchange="setYouTubeUrl()" style="width:100%" />
                </div>
            </div>

            <div class="form-group">
                <label for="Name" class="cols-sm-2 control-label">Name</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <input class="form-control" asp-for="Name" value=@Model.Name />
                    </div>
                    <span asp-validation-for="Name"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="NeedMoney" class="cols-sm-2 control-label">NeedMoney"</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <input class="form-control" asp-for="NeedMoney" value=@Model.NeedMoney />
                    </div>
                    <span asp-validation-for="NeedMoney"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="BrieflyAbout" class="cols-sm-2 control-label">BrieflyAbout</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <textarea class="form-control" style="height:150px" asp-for="BrieflyAbout" value="@Model.BrieflyAbout"></textarea>
                    </div>
                    <span asp-validation-for="BrieflyAbout"></span>
                </div>
            </div>
            <div class="form-group">
                <label for="About" class="cols-sm-2 control-label">About</label>
                <div class="cols-sm-10">
                    <div class="input-group">
                        <textarea class="form-control" style="height:350px" asp-for="About" value="@Model.About"></textarea>
                    </div>
                    <span asp-validation-for="About"></span>
                </div>
                <div>

                </div>
            </div>

            <div class="form-group ">

                <input type="submit" value="Edit" class="myButton  btn-lg btn-block login-button" />
            </div>

        </form>
            
    </div>