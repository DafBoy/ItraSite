            <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
                <a href="/Home" class="navbar-brand">
                    <img src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" width="30" height="30" alt="logo">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto mr-5">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item active">
                                <a href="/Account" class="nav-link">
                                    @User.Identity.Name
                                </a>
                            </li>
                            <li class="nav-item active">
                                <form method="post" asp-controller="Account" asp-action="LogOut">
                                    <input type="image" value="LogOut" />
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item active">
                                <a href="/Account/Register" class="nav-link">Registration</a>
                            </li>
                            <li class="nav-item active">
                                <!--<a href="#" data-toggle="modal" data-target="#Modal" class="nav-link">Login</a>-->
                                <a href="/Account/Login" class="nav-link">Login</a>
                            </li>

                        }




                    </ul>

                    <div class="search">
                        <input type="text" class="form-control input-sm" maxlength="64" placeholder="Search" />
                        <button type="submit" class="btn btn-primary btn-sm myButton">Search</button>
                    </div>
                </div>
            </nav>


            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; 2019 - Itransition</p>

                </footer>
            </div>

        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
</body>
</html>
