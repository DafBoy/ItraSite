
<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link href="~/css/jquery.fancybox.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/main.css">

    <title></title>
</head>
<body>



    <div>

        <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
            <a href="/Home" class="navbar-brand mr-5" >
                <img src="~/img/Banner.png" width="50" height="50" alt="logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto mr-5">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item active">
                            <a href="/Account?user=@User.Identity.Name" class="nav-link">
                                @User.Identity.Name
                            </a>
                        </li>
                        <li class="nav-item active">
                            <form method="post" asp-controller="Account" asp-action="LogOut">
                                <input type="image" value="LogOut" />
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item active">
                            <a href="/Account/Register" class="nav-link">Registration</a>
                        </li>
                        <li class="nav-item active">
                            <a href="/Account/Login" class="nav-link">Login</a>
                        </li>

                    }




                </ul>
                <form class="form-horizontal" asp-controller="Search" asp-action="Index" enctype="multipart/form-data">
                    <div class="search">
                        <input type="text" name="search" class="form-control input-sm" maxlength="64" placeholder="Search" required />
                        <button type="submit" class="btn btn-primary btn-sm myButton">Search</button>
                    </div>
                </form>
            </div>
        </nav>



        @RenderBody()


        <hr />
        <footer style="position:fixed;bottom:0;right:47%">
            <p>&copy; 2019 - Itransition</p>

        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.0.3.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/main.js"></script>
    <script src="~/js/comment.js"></script>

</body>
</html>
